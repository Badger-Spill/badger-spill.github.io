import { Image } from 'astro:assets'
import logo from '../assets/logo.png'
---

<header class="py-4 mb-8 sm:mb-16">
  <!-- 
    Uses flexbox for screens >= small, uses box layout for screens < small 
    This causes the navbar to stack under the logo on screens < small
    In the future, if we want to add more nav links, we will need a proper hamburger menu
  -->
  <nav
    class="mx-auto flex flex-wrap gap-10 items-center justify-between"
    aria-label="navigation"
  >
    <a href="/">
      <Image src={logo} alt="Badger Spill" class=" max-w-32">
    </a>
    <div
      class="text-sm flex flex-row items-center gap-5 sm:gap-10 sm:text-md"
    >
      <a
        class="font-medium text-zinc-200 hover:text-primary-200"
        href="/"
      >
        Home
      </a>
      <a
        class="font-medium text-zinc-200 hover:text-primary-200"
        href="/resources"
      >
        Resources
      </a>
      <a
        class="font-medium text-zinc-200 hover:text-primary-200 "
        href="/testimonials"
      >
        Testimonials
      </a>
      <a
        class="font-medium text-zinc-200 hover:text-primary-200 "
        href="/get-involved"
      >
        Get Involved
      </a>
    </div>
  </nav>
</header>
